<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/css/main.css" type="text/css">
</head>
<body class="max-width-container">
    <div class="container">
        <div class="header">
            <div class="logo">
                <img src="/img/MEDIUM.png">
            </div>
            <ul class="header-list">
                <li>Home</li>
                <li>Write</li>
                <li>Profile</li>
            </ul>
        </div>

        <div class="hero-img">
            <img src="/img/homePage.svg">
        </div>
    </div>
        <section class="blog-section">
            <div class="blog">
                <div class="blog-header container">
                    <h1>Trending</h1>
                </div>
                {{!-- <h1>{{indexArticle.loggedId}}</h1> --}}
            </div>
            {{!-- Start loop from here --}}
            {{#if indexArticle.posts}}
                {{#each indexArticle.posts}}
                    <a href="/posts/{{../indexArticle.loggedId}}/article/{{this._id}}">
                    {{!-- <a href="/posts/61046d7658d96d1f2caad99e/article/{{this._id}}"> --}}
                        <div class="background-wrapper">
                            <div class="blog-article container">
                                <div class="blog-image">
                                    <img src="/{{this.thumbnail}}">
                                </div>
                                <div class="blog-piece">
                                    <h1 class="blog-category">Tech</h1>
                                    <h1 class="blog-title">{{sliceText this.title}}</h1>
                                    <h2 class="blog-summary">{{sliceText this.body}}</h2>
                                </div>
                                <div class="blog-metas">
                                    <div class="like-comment">
                                        <span class="likes"><img src="/img/Star.svg"><h1>21k</h1></span>
                                        <img src="/img/Bookmark.svg">
                                    </div>
                                    <div>
                                        <h1 class="time-posted">{{dateLocale this.timePosted}}</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                {{/each}}
            {{else}}
                <h1 class="not_available">No Posts available yet</h1>
            {{/if}}
            </div>
        </section>
</body>
</html>